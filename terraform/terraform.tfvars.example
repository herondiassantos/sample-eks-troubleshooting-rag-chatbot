# Example Terraform variables file
# Copy this to terraform.tfvars and update with your values

# Deployment type: "rag" for RAG-based chatbot or "agentic" for agentic troubleshooting
deployment_type = "rag"

# Slack configuration (used by both deployments)
slack_webhook_url = "https://hooks.slack.com/services/YOUR/WEBHOOK/URL"
slack_channel_name = "alert-manager-alerts"

# OpenSearch configuration (RAG deployment only)
opensearch_collection_name = "vector-col"

